# ==============================================
# KONFIGURASI .env UNTUK HOSTING CPANEL
# ==============================================
# Copy konfigurasi ini ke file .env di hosting
# Sesuaikan nilai database dan domain sesuai hosting Anda

# Application Configuration
APP_NAME="Event Manager"
APP_ENV=production
APP_KEY=base64:your_app_key_here
APP_DEBUG=false
APP_URL=https://lark.today/event/public

# Database Configuration (sesuaikan dengan hosting)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Session Configuration untuk Hosting
SESSION_DRIVER=database
SESSION_LIFETIME=43200
SESSION_ENCRYPT=false
SESSION_PATH=/event/public/
SESSION_DOMAIN=.lark.today
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_EXPIRE_ON_CLOSE=false

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync

# Mail Configuration (opsional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (opsional)
BROADCAST_DRIVER=log
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Security Configuration
BCRYPT_ROUNDS=10

# ==============================================
# CATATAN PENTING UNTUK DEPLOYMENT:
# ==============================================
# 
# 1. Ganti 'your_database_name' dengan nama database hosting Anda
# 2. Ganti 'your_db_username' dengan username database hosting
# 3. Ganti 'your_db_password' dengan password database hosting
# 4. Ganti 'your_app_key_here' dengan APP_KEY dari .env lokal
# 5. Sesuaikan SESSION_DOMAIN dengan domain hosting Anda
# 6. Pastikan SESSION_PATH sesuai dengan struktur folder hosting
# 
# CONTOH UNTUK HOSTING LARK.TODAY:
# SESSION_DOMAIN=.lark.today
# SESSION_PATH=/event/public/
# APP_URL=https://lark.today/event/public
# 
# ==============================================
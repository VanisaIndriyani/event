# Laravel Environment Configuration for Hosting
# Copy this file to .env and update the values according to your hosting setup

APP_NAME="Event Manager"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# Update these values with your hosting database credentials
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Broadcasting
BROADCAST_DRIVER=log

# Cache
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=sync

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

# Mail Configuration
# Option 1: Using hosting SMTP
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Event Manager"

# Option 2: Using Gmail SMTP (alternative)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-gmail@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=your-gmail@gmail.com
# MAIL_FROM_NAME="Event Manager"

# Option 3: Using Mailgun (recommended for production)
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_SECRET=your-mailgun-secret
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME="Event Manager"

# Security
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# File Upload Settings (adjust based on hosting limits)
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Timezone
APP_TIMEZONE=Asia/Jakarta

# Additional hosting-specific configurations
# Uncomment and adjust as needed

# For shared hosting with limited resources
# CACHE_DRIVER=array
# SESSION_DRIVER=array

# For hosting with Redis support
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# For hosting with Memcached support
# CACHE_DRIVER=memcached
# MEMCACHED_HOST=127.0.0.1

# CDN Configuration (if using)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Social Login (if implemented)
# GOOGLE_CLIENT_ID=
